extends layout

block content
  .container
    h1 Project_BLuR Registration Page
    p.lead Create an account for Project_BLuR 
    br
    h4= errorString
    form(role='form', action="/register",method="post", style='max-width: 300px;')
      .form-group
        input.form-control(type='text', name="username", placeholder='Enter Username', value="#{username}")
      .form-group
        input.form-control(type='password', name="password", placeholder='Password')
      .form.group
        input.form-control(type='password', name="password_confirmation", placeholder='Password')
        br
      .form.group
        input.form-control(type='text', name="firstname", placeholder='Enter First Name', value="#{firstname}")
        br
      .form.group
        input.form-control(type='text', name="lastname", placeholder='Enter Last Name', value="#{lastname}")
        br
      .form.group
        input.form-control(type='text', name="email", placeholder='Enter Email Address', value="#{email}")
        br
      button.btn.btn-default(type='submit') Register
      a(href='/')
        button.btn.btn-primary(type="button") Cancel
    br